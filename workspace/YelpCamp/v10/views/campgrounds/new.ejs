<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Create a new Campland</h1>
        
        <div style="width: 30%; margin: 0 auto">
            <form action="/camps" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/camps">Go back</a>
        </div>
        
    </div>
    
</div>


<% include ../partials/footer %>
