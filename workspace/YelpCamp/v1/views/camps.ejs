<% include partials/header %>

<div class="container">
     
     <div class="jumbotron">
          <div class="container">
                <h1>Welcome to the YelpCamp</h1>
                <p>View our hand-picked campgrounds from all over the world</p>
               <a class="btn btn-primary btn-large" href="/camps/new">Add a new Campland</a>
          </div>
     </div>
     
     <div class="row" style="display:flex; flex-wrap:wrap;">
          <% campground.forEach(function(camp){ %>
          <div class="thumbnail col-md-3 col-sm-6">
               <img src="<%= camp.image %>">
               <div class="caption">
                    <h4> <%= camp.name %> </h4>
               </div>
          </div>
          <% }); %>
     </div>
     

</div>

<% include partials/footer %>

