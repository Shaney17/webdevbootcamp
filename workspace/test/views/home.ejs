<% include partials/header %>

<section id="main">
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-md-offset-3">
					<div class="panel panel-default">

						<div class="panel-heading">
							<h4>LOGIN</h4>
						</div>

						<div class="panel-body">

							<div id="errors"></div>

							<form id="form-login" action="/login" method="POST" role="form">
							
								<div class="form-group">
									<label for="username"><strong>Username</strong></label>
									<input type="text" name="ID" class="form-control" id="username" placeholder="type your username">
								</div>
							
								<div class="form-group">
									<label for="password"><strong>Password</strong></label>
									<input type="password" name="password" class="form-control" id="password" placeholder="type your password">
								</div>
								
								<div class="row">
									<div class="col-md-6">
										<button type="submit" class="btn btn-primary btn-block">Submit</button>
									</div>
									<div class="col-md-6">
										<a href="#" class="btn btn-link">Forgot your password ?</a>
									</div>
								</div>

									
								
							</form>
						</div>
					</div>
				</div>
			</div> <!-- /.row -->
		</div> <!-- /.container -->
	</section>	<!-- #main -->
	
<% include partials/footer %>